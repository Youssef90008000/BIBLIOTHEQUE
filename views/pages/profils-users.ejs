<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Utilisateurs - Bibliothèque</title>
    <link rel="stylesheet" href="/css/profils-users.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Liste des Utilisateurs</h1>
      </header>

      <div class="search-bar">
        <input
          type="text"
          id="searchInput"
          placeholder="Rechercher un utilisateur..."
        />
        <button class="submit-btn">Rechercher</button>
      </div>

      <% if (user && user.role === 'admin') { %>
      <div class="add-user">
        <a href="/register" class="submit-btn">Ajouter un utilisateur</a>
      </div>
      <% } %>

      <table>
        <thead>
          <tr>
            <th>Avatar</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Âge</th>
            <th>Rôle</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %> 
          <% users.forEach(userItem => { %>
          <tr>
            <td>
              <img
                src="<%= userItem.avatar || '/images/default-avatar.png' %>"
                alt="avatar"
                width="50"
              />
            </td>
            <td><%= userItem.first %> <%= userItem.last %></td>
            <td><%= userItem.email %></td>
            <td><%= userItem.age || 'N/A' %> ans</td>
            <td><%= userItem.role %></td>
            <td>
              <a href="/user-details/<%= userItem._id %>">Détails</a>

              <% if (user && user.role === 'admin') { %>
              <a href="/profil-update/<%= userItem._id %>" class="edit-btn"
                >Modifier</a
              >
              <form
                action="/users/<%= userItem._id %>?_method=DELETE"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="delete-btn"
                  onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?')"
                >
                Supprimer
                </button>
              </form>
              <% } %>
            </td>
          </tr>
          <% }); %> 
          <% } else { %>
          <tr>
            <td colspan="6">Aucun utilisateur trouvé.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script>
      document
        .getElementById("searchInput")
        .addEventListener("input", function () {
          let filter = this.value.toLowerCase();
          let rows = document.querySelectorAll("tbody tr");

          rows.forEach((row) => {
            let name = row.cells[1].innerText.toLowerCase();
            let email = row.cells[2].innerText.toLowerCase();
            row.style.display = name.includes(filter) || email.includes(filter) ? "" : "none";
          });
        });
    </script>
  </body>
</html>
